  selected = {true},
}

@InProceedings{Rautek-2006-DHQ,
  author      = {Rautek, Peter and Csebfalvi, Bal{\'a}zs and Grimm, S{\"o}ren and Bruckner, Stefan and Gr{\"o}ller, Meister Eduard},
