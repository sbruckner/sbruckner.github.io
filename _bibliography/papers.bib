  keywords = {bioinformatics, proteogenomics},
  pdf      = {Vasicek-2025-PEH.pdf},
  images   = {Vasicek-2025-PEH.jpg},
  preview  = {Vasicek-2025-PEH.png},
}


@InProceedings{Bru-2023-LHI,
  author    = {Bru, Egil and Trautner, Thomas and Bruckner, Stefan},
